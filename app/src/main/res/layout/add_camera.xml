<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sisun.kokkiri.sisun.UI.Add_Camera">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/password_field"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/password"
                android:layout_alignLeft="@+id/id_field"
                android:layout_alignStart="@+id/id_field"
                android:background="#cccccc"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/identification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/port_number"
                android:layout_alignStart="@+id/port_number"
                android:layout_below="@+id/port_number"
                android:layout_marginTop="30dp"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ip_address_field"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/port_number"
                android:layout_alignLeft="@+id/camera_name_field"
                android:layout_alignStart="@+id/camera_name_field"
                android:background="#cccccc"
                android:textColor="#000000"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/id_field"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/identification"
                android:layout_alignLeft="@+id/port_num_field"
                android:layout_alignStart="@+id/port_num_field"
                android:background="#cccccc"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/ip_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/camera_name"
                android:layout_alignStart="@+id/camera_name"
                android:layout_below="@+id/camera_name"
                android:layout_marginTop="140dp"
                android:text="Hostname / IP"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/port_num_field"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/port_number"
                android:layout_alignLeft="@+id/ip_address_field"
                android:layout_alignStart="@+id/ip_address_field"
                android:background="#cccccc"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/setting_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Camera Info"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/identification"
                android:layout_alignStart="@+id/identification"
                android:layout_below="@+id/identification"
                android:layout_marginTop="30dp"
                android:text="password"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/camera_name_field"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/camera_name"
                android:layout_alignBottom="@+id/camera_name"
                android:layout_marginLeft="150dp"
                android:background="#cccccc"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/port_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ip_address"
                android:layout_alignStart="@+id/ip_address"
                android:layout_below="@+id/ip_address"
                android:layout_marginTop="30dp"
                android:text="Port Number"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/camera_info_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"
                android:text="save" />

            <TextView
                android:id="@+id/camera_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_camera"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="33dp"
                android:text="Camera Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/back_btn_in_camera_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/camera_info_save"
                android:layout_toRightOf="@+id/camera_info_save"
                android:text="Back" />

            <RadioButton
                android:id="@+id/UseURI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/UseINFO"
                android:layout_alignBottom="@+id/UseINFO"
                android:layout_alignLeft="@+id/back_btn_in_camera_add"
                android:layout_alignStart="@+id/back_btn_in_camera_add"
                android:text="Use Uri"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/UseINFO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:checked="true"
                android:text="Use Info"
                android:textSize="18sp"
                android:layout_below="@+id/camera_name_field"
                android:layout_toLeftOf="@+id/back_btn_in_camera_add"
                android:layout_toStartOf="@+id/back_btn_in_camera_add" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/URI_INFO"
                android:layout_alignBottom="@+id/URI_INFO"
                android:layout_alignLeft="@+id/ip_address"
                android:layout_alignStart="@+id/ip_address"
                android:text="Uri"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/URI_INFO"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ip_address_field"
                android:layout_alignRight="@+id/ip_address_field"
                android:layout_below="@+id/UseURI"
                android:layout_marginTop="20dp"
                android:background="#cccccc"
                android:editable="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="19sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
